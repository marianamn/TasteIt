@model IEnumerable<TasteIt.Web.Models.Article.ArticleViewModel>
@{
    ViewBag.Title = "RelatedArticles";
}

<div class="jumbotron">
    <h1 class="text-center">Related Articles from <i class="logo">Taste It!</i></h1>
    <hr />

    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-4 text-center">
                <div class="container-articles">
                    <h4 class="section-subtitles"><strong>@Html.ActionLink(article.Title, article.Url, "Articles")</strong></h4>
                    <h4><strong>@article.Category</strong></h4>
                    <p><span class="glyphicon glyphicon-calendar"></span> @article.CreatedOn</p>
                    <img src="@article.ArticleImage" class="images-home" />
                </div>
            </div>

        }
    </div>
</div>

