@model TasteIt.Web.Models.Article.ArticleListViewModel
@{
    ViewBag.Title = "RelatedArticles";
}

<div class="jumbotron">
    <h1 class="text-center">Related Articles</h1>
    <h3 class="text-center">category: <i class="logo"></i>@Model.Articles.Take(1).FirstOrDefault().ToString()</h3>
    <hr />

    <div class="row">
        @Html.Partial("_ArticlePartial")
    </div>

    <div class="text-center">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a href="/Articles/PartialArticles/Index/@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                var className = string.Empty;
                if (Model.CurrentPage == i)
                {
                    className = "active";
                }
                <li class="@className"><a href="/Articles/PartialArticles/Index/@i">@i</a></li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>
                    <a href="/Articles/PartialArticles/Index/@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>

        <div>@Html.ActionLink("Back to articles", "/", null, new { @class = "btn btn-primary" })</div>
    </div>
</div>

