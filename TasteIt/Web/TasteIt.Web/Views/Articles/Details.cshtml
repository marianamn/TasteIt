@model TasteIt.Web.Models.Article.ArticleViewModel
@{
    ViewBag.Title = "Details";
}

<div class="jumbotron">
    <div>
        <h2 class="detail-title">@Html.DisplayFor(@model => model.Title)</h2>
        <div>
            <p><i>by: </i>@Html.DisplayFor(@model => model.Author) <i>on: </i>@Html.DisplayFor(@model => model.CreatedOn)</p>
        </div>
        <img class="detail-image" src="@Html.DisplayFor(@model =>model.ArticleImage)" />
    </div>

    <div class="detail-text">
        @Html.DisplayFor(@model => model.Content)
    </div>

    <div>
        <h2 class="relatedArticle-link">
            @Html.ActionLink("Related Articles", "/RelatedArticles" + @Html.DisplayFor(@model => model.Url), "Articles")
        </h2>
    </div>
</div>


