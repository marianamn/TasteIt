@model TasteIt.Web.Models.Ingredient.AlphabeticalPagingViewModel
@{
    ViewBag.Title = "_IngredientPartial";
}

<div class="row">
    @foreach (var item in Model.Ingredients)
    {
        <div class="col-md-2">
            <h4 class="section-subtitles">
                <strong>
                    @Html.ActionLink(item.Name, "/Details" + item.Url, "Ingredients")
                </strong>
            </h4>
            <img src="@item.IngredientImage" class="ingredient-image" />
        </div>
    }

</div>